---
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<!-- Importing Google Fonts for our utilitarian look -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-surface text-black font-sans antialiased min-h-screen p-4 md:p-8">
		<header class="max-w-6xl mx-auto mb-12 border-b-2 border-black pb-6 flex justify-between items-end">
			<div>
				<h1 class="text-4xl font-bold uppercase tracking-tight">Claws Track</h1>
				<p class="font-mono text-sm mt-2 text-gray-600">// Open Source Project Analysis Matrix</p>
			</div>
			<div class="hidden md:block">
				<span class="bg-black text-white font-mono text-xs px-2 py-1">V 1.0.0</span>
			</div>
		</header>
		<main class="max-w-6xl mx-auto">
			<slot />
		</main>
	</body>
</html>
